<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


<bean id="hello" class="com.training.bean.HelloWorld" scope="prototype">

<constructor-arg name="message">
<value>This is a message from constructor</value>
</constructor-arg>

<constructor-arg name="age">
<value>25</value>
</constructor-arg>

<property name="message"> <!--  setter -->
<value>This is a message from setter</value>
</property>


</bean>

</beans>
